<Window x:Class="RaceSimulatorGUI.Statistics"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RaceSimulatorGUI"
        mc:Ignorable="d"
        Title="Statistics" Height="450" Width="800">
    <Window.DataContext>
        <local:DataContext/>
    </Window.DataContext>
    <Grid>
        <Grid.DataContext>
            <local:DataContext/>
        </Grid.DataContext>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="337*"/>
            <ColumnDefinition Width="358*"/>
            <ColumnDefinition Width="105*"/>
        </Grid.ColumnDefinitions>
        <Label Content="{Binding trackLength}" HorizontalAlignment="Left" Margin="29,22,0,0" VerticalAlignment="Top"/>
        <Label Content="{Binding Rounds}" HorizontalAlignment="Left" Margin="29,68,0,0" VerticalAlignment="Top"/>
        <Label Content="{Binding ParticipantCount}" HorizontalAlignment="Left" Margin="30,115,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
